<table class='table'>
    <tr><%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
    <tr>
      <th>follows</th>
      <th><%= user.followings.count %></th>
    </tr>
    <tr>
      <th>followers</th>
      <th><%= user.followers.count %></th>
    </tr>
</table>
<!--follow_buttn-->
   <% if current_user != user %>
<!--if current_user != userで自分をのぞいた人たちのみボタンを表示-->
    <% if current_user.following?(user) %>
       <%=link_to "フォロー外す",user_relationships_path(user.id),class: "btn btn-primary", method: :delete %>
    <% else %>
       <%=link_to "フォロー", user_relationships_path(user.id),class: "btn btn-success", method: :post %>
    <% end %>
   <% end %>
<!-----user/show link-->
<br><div class='row'>
  <%= link_to '',edit_user_path(user),class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_#{user.id}" %>
</div>